{
  "name": "ngx-image-upload",
  "version": "2.0.0",
  "description": "An angular component that uploads images using native browser upload or drag-n-drop.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf lib .tmp demo/src/lib && gulp build",
    "release": "npm run build && npm run build:demo && git add docs && standard-version --commit-all",
    "publish": "git push --follow-tags origin master && npm publish",
    "install:demo": "cd demo && yarn",
    "demo": "cd demo && npm start",
    "build:demo": "cd demo && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edulelis/ngx-image-upload"
  },
  "keywords": [
    "image",
    "upload",
    "angular",
    "ng",
    "image",
    "preview",
    "file",
    "upload",
    "drag",
    "drop",
    "drag&drop"
  ],
  "author": "Arkadii Berezkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edulelis/ngx-image-upload/issues"
  },
  "homepage": "https://github.com/edulelis/ngx-image-upload#readme",
  "peerDependencies": {
    "@angular/common": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/http": "^6.0.6",
    "rxjs": "^6.2.1"
  },
  "devDependencies": {
    "@angular/common": "^6.0.6",
    "@angular/compiler": "^6.0.6",
    "@angular/compiler-cli": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/http": "^6.0.6",
    "@angular/language-service": "^6.0.6",
    "@types/core-js": "^0.9.34",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-inline-ng2-template": "^4.0.0",
    "gulp-ngc": "^0.3.2",
    "rxjs": "^6.2.1",
    "standard-version": "^4.2.0",
    "typescript": "^2.7.2"
  }
}
